    resImpl->r.malloced = 10;
    resImpl->r.size = 0;
    resImpl->r.actualSize = 0;
    resImpl->r.offset = -1;
    resImpl->r.resultSetIterState = -1;
    c->res = &resImpl->r;
<%# Maybe assert(typeof(<%= @type) <= 64) %>
