      <%= display_loop("lany_dstr") %>
        if (tuple_iter == NULL) continue;
<%              if !@record_lock.empty? %>
        <%= @lock_class.lock_function.gsub("<selector>", "#{@lock_argument}") %>;
<%              else %>
<%                @columns.each { |col %>
<%                  if !col.lock.empty? %>
        <%= col.lock_class.lock_function.gsub("<selector>", "#{@lock_argument}") %>;
<%                  end %>
<%                } %>
<%              end %>
    }
<%            end %>
<%          end %>
<%        end %>
  }
